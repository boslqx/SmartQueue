<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@android:color/white">

        <!-- Header with title and priority badge -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvAnnouncementTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Announcement Title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <!-- Priority Badge -->
            <TextView
                android:id="@+id/tvPriorityBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="P5"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/priority_badge"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Type and Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvAnnouncementType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="info"
                android:textSize="12sp"
                android:textColor="#666666"
                android:background="@drawable/type_badge"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp" />

            <TextView
                android:id="@+id/tvAnnouncementStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Active"
                android:textSize="12sp"
                android:textColor="#4CAF50"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Announcement Message -->
        <TextView
            android:id="@+id/tvAnnouncementMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Announcement message content goes here..."
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="12px"
            android:lineSpacingExtra="4dp" />

        <!-- Footer with timestamp and delete button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvAnnouncementTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2 hours ago"
                android:textSize="12sp"
                android:textColor="#999999" />

            <!-- Delete Button -->
            <Button
                android:id="@+id/btnDeleteAnnouncement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textSize="12sp"
                android:backgroundTint="#F44336"
                android:textColor="@android:color/white"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>