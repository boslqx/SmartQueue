<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_service"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
                android:textColor="@color/primary" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="3"
                android:alignmentMode="alignMargins"
                android:rowOrderPreserved="false"
                android:useDefaultMargins="true">

                <!-- Discussion Room -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/btnDiscussionRoom"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/discussion_room"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:drawableTop="@drawable/ic_room"
                        android:padding="16dp" />
                </androidx.cardview.widget.CardView>

                <!-- Pool Table -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/btnPoolTable"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/pool_table"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:drawableTop="@drawable/ic_pool"
                        android:padding="16dp" />
                </androidx.cardview.widget.CardView>

                <!-- Ping Pong -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/btnPingPong"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/ping_pong"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:drawableTop="@drawable/ic_pingpong"
                        android:padding="16dp" />
                </androidx.cardview.widget.CardView>

                <!-- Court -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/btnCourt"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/multipurpose_court"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:drawableTop="@drawable/ic_court"
                        android:padding="16dp" />
                </androidx.cardview.widget.CardView>

                <!-- Music Room -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/btnMusicRoom"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/music_room"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:drawableTop="@drawable/ic_music"
                        android:padding="16dp" />
                </androidx.cardview.widget.CardView>

                <!-- Lecturer Consultation -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/btnConsultation"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/lecturer_consultation"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:drawableTop="@drawable/ic_lecturer"
                        android:padding="16dp" />
                </androidx.cardview.widget.CardView>

            </GridLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:itemIconTint="@color/nav_item_color"
        app:itemTextColor="@color/nav_item_color"
        app:menu="@menu/bottom_nav_menu" />
</LinearLayout>