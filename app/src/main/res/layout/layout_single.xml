<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background"
    android:paddingTop="?attr/actionBarSize"
    android:gravity="center">

    <TextView
        android:id="@+id/tvSingleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/available"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/text_dark"
        android:layout_marginBottom="24dp" />

    <!-- Single Location Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/singleLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/primary"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp">

            <ImageView
                android:id="@+id/ivSingleIcon"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_musicroom"
                android:contentDescription="@string/location_icon" />

            <TextView
                android:id="@+id/tvSingleName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/music_room"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark"
                android:layout_marginTop="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tap_for_time_slots"
                android:textSize="14sp"
                android:textColor="@color/text_dark"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>