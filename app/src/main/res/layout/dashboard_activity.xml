<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FCF9EA"
    tools:context=".DashboardActivity">

    <!-- Home Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/home_title"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <!-- Announcement Section -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#BADFDB">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvAnnouncementTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/announcements"
                android:textColor="#333333"
                android:textStyle="bold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvAnnouncementMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/no_updates"
                android:textColor="#333333"
                android:textSize="14sp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Quick Navigate Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:weightSum="2">

        <!-- Quick Book Button - Simplified with compound drawable -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnQuickBook"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            app:cardBackgroundColor="#BADFDB"
            app:cardCornerRadius="20dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/quick_book"
                android:textColor="#333333"
                android:textStyle="bold"
                app:drawableTopCompat="@drawable/ic_calendar"
                app:drawableTint="#333333"
                android:padding="16dp" />
        </com.google.android.material.card.MaterialCardView>

        <!-- My Queues Button - Simplified with compound drawable -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnMyQueues"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            app:cardBackgroundColor="#FFA4A4"
            app:cardCornerRadius="20dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/my_queues"
                android:textColor="#333333"
                android:textStyle="bold"
                app:drawableTopCompat="@drawable/ic_queue"
                app:drawableTint="#333333"
                android:padding="16dp" />
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <!-- Recent Activity Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/recent_activity"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_margin="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerRecent"
        android:layout_width="match_parent"
        android:layout_height="257dp"
        android:layout_marginHorizontal="16dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="80dp" />

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:itemIconTint="@color/nav_item_color"
        app:itemTextColor="@color/nav_item_color"
        app:menu="@menu/bottom_nav_menu" />
</LinearLayout>